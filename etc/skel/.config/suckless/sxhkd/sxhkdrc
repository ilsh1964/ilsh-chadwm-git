#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# Kan-11
super + F1
	gtk-launch WebApp-2892


# Help
super + F2
    /home/ilan/.config/suckless/scripts/help

# C14
super + F4
    gtk-launch WebApp-6751

# i24-Tv
super + F5
    gtk-launch WebApp-5617


#################################################################
# SUPER + Letter
#################################################################
#

# Rofi
super + d
    rofi -show drun

# Geany
super + e
    geany

# Gimp
super + g
    gimp

# Thunar
super + t
    /home/ilan/.config/suckless/xdotool/s9 && thunderbird

# Pavucontrol
super + v
    pavucontrol

# archlinux-logout
super + x
    archlinux-logout

# alacritty
super + Return
    alacritty

# Xkill
super + Escape
    xkill


#################################################################
# SUPER + SHIFT KEYS
#################################################################

# Thunar
super + shift + Return
    /home/ilan/.config/suckless/xdotool/s3 && thunar

# Set resolution to 1920x1080
super + shift + d
    alacritty -e xrandr --output DP1 --mode 1920x1080

# Hebrew
super + shift + h
    alacritty -e "/home/ilan/.bin/heb.sh"

# Reload sxhkd
super + shift + s
	pkill -USR1 -x sxhkd


