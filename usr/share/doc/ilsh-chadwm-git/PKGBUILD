# Maintainer: Ilan Shavit <ilan.shavit@gmail.com>
pkgname=ilsh-chadwm-git
pkgver=1
pkgrel=10
pkgdesc="My config files for chadwm WM"
arch=('any')
url="https://github.com/ilsh1964/ilsh-chadwm-git"
license=('GPL3')
makedepends=('git')
source=("git+https://github.com/ilsh1964/ilsh-chadwm-git.git")
md5sums=('SKIP')

package() {
  cd "$srcdir/$pkgname"

  # Clean up VCS metadata if present
  rm -rf .git

  # Install files into /etc/skel/ilsh-wm-git
  install -d "$pkgdir"
  cp -a . "$pkgdir"
}
